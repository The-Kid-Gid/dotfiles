[user]
	email = gideonshaked@gmail.com
	name = Gideon Shaked
	signingkey = 4F60C96390E6E336

[includeIf "gitdir:~/umich/"]
    path = ~/.git-identities/gitconfig-umich

[core]
	attributesfile = ~/.gitattributes

[include]
	path = ~/.gitalias.txt

[alias]
	nuke = !git-nuke
	tag = tag -s

[commit]
	gpgsign = true

[pull]
	ff = only

[push]
	default = upstream

[diff "jupyternotebook"]
	command = git-nbdiffdriver diff

[merge "jupyternotebook"]
	command = git-nbmergedriver merge %O %A %B %L %P

[color]
	branch = auto
	diff = auto
	status = auto
    showbranch = auto
	ui = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = yellow
	untracked = cyan

[format]
    pretty = %C(yellow)%h%Creset %C(magenta)%cd%Creset %an <%ae> %C(cyan)%s%Creset%C(yellow)%d%Creset%n

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	
[gpg]
	program = gpg

[safe]
    directory = *
